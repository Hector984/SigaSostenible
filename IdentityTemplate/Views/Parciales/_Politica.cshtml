@model IdentityTemplate.ViewModels.VariablesSeguimiento.PoliticaViewModel


@{
}


<form asp-action="Crear" asp-controller="Politica" method="post">

    <div class="row">
        <div class="col-12 mb-3">
            <label class="form-label" asp-for="Nombre"></label>
            <input type="text" class="form-control" asp-for="Nombre">
            <span asp-validation-for="Nombre" class="text-danger"></span>
        </div>
    </div>

    <button type="submit" class="btn btn-success">Crear</button>
    <a class="btn btn-secondary" asp-action="Index">Cancelar</a>

</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}