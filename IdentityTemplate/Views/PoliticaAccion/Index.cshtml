@model IEnumerable<IdentityTemplate.Models.Catalogs.Politica>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Registro de Políticas o Acciones</h1>

<p class="my-3">
    <a asp-action="Create" class="btn btn-success">Crear nueva</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NombrePoliticaAccion)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NombrePoliticaAccion)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.PoliticaId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.PoliticaId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.PoliticaId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
