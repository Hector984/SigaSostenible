@model IdentityTemplate.ViewModels.ContraseñaOlvidadaViewModel

@{
    ViewData["Title"] = "Conatraseña Olvidada";
}

<div class="row">
    <div class="col-md-6">

        <h1 class="mt-4 mb-3">Te enviaremos un link para reestablecer tu contraseña.</h1>

        <form method="post" asp-action="ContraseñaOlvidada">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <label asp-for="Correo" class="form-label"></label>
            <input asp-for="Correo" class="form-control" />
            <span asp-validation-for="Correo" class="text-danger"></span>

            <span class="text-danger">@ViewBag.Error</span>

            <button type="submit" class="w-100 btn btn-lg btn-primary mt-4">Reestrablecer Contraseña</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}